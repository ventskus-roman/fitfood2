#index_recipes
  - @recipes.each do |recipe|
    .row
      .box
        .col-lg-12
          %hr
          %h2.intro-text.text-center= link_to recipe.name, recipe
          %hr
          - if recipe.image.exists?
            = image_tag recipe.image.url(:medium), class: "img-responsive img-border img-left"
          %hr.visible-xs
          %p= recipe.description