#recipe
  .row
    .box
      .col-lg-12
        %p Название:
        %h2= @recipe.name
        - if @recipe.image.exists?
          = image_tag @recipe.image.url(:large)
        .row
          .col-md-1
            %p Калории:
            %h3= @recipe.calories
          .col-md-1
            %p Белки:
            %h3= @recipe.proteins
          .col-md-1
            %p Углеводы:
            %h3= @recipe.carbs
          .col-md-1
            %p Жиры:
            %h3= @recipe.fat
          .col-md-1
            %p Вес, г:
            %h3= @recipe.weight
        %p Описание:
        %h3= raw @recipe.description
        %p Добавлено:
        = link_to @recipe.user.email, user_recipes_path(@recipe.user)
        %p= @recipe.created_at
        %hr/

        #ingredients
          %p Ингредиенты:
          = render @recipe.ingredients
          %br/
          - if user_signed_in? && current_user.id == @recipe.user.id
            %h3 Добавить ингредиент
            = render 'ingredients/form'
        = link_to "Назад", root_path
        - if user_signed_in? && current_user.id == @recipe.user.id
          = link_to "Редактировать", edit_recipe_path(@recipe)
          = link_to "Удалить", @recipe, method: :delete, data: { confirm: "Вы уверены?" }