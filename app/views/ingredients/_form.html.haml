= simple_form_for([@recipe, @recipe.ingredients.build]) do |f|
  = f.input :product_id, as: :hidden, input_html: {id: "product_id"}
  = f.input :product_name, :url => autocomplete_product_name_recipes_path, :as => :autocomplete, :id_element =>"#product_id", :label => "Продукт", input_html: { class: 'form-control' }
  = f.input :weight, label: "Вес, г"
  %br/

  = f.button :submit, label: "Добавить"