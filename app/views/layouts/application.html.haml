!!!
%html
  %head
    %title FitFood
    = stylesheet_link_tag :application, :media => 'all'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Josefin+Slab:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic"
    %body
      - if notice
        #notice_wrapper
          %p.notice= notice
      - elsif alert
        #alert_wrapper
          %p.alert= alert
      .brand 
        = link_to "Fit & Food", root_path
      .address-bar Вкусные и полезные рецепты
      %nav.navbar.navbar-default
        .container
          .navbar-header
            %button.navbar-toggle
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to "Фитнес рецепты", root_path, class: "navbar-brand"
          .collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li
                = link_to "Все рецепты", root_path
              - if user_signed_in?
                %li
                  = link_to "Мои", user_recipes_path(current_user)
                %li
                  = link_to "Лента", user_news_path(current_user)
                %li
                  = link_to "Добавить рецепт", new_recipe_path
              %li
                = link_to "Тэги", tags_recipes_path
            %p.navbar-text.pull-right
              - if user_signed_in?
                = link_to current_user.email, edit_user_registration_path, class: 'navbar-link'
                |
                = link_to 'Выход', destroy_user_session_path, method: :delete, class: 'navbar-link'
              - else
                = link_to 'Зарегистрироваться', new_user_registration_path, class: 'navbar-link'
                |
                = link_to 'Войти', new_user_session_path, class: 'navbar-link'
      .container
        = yield
